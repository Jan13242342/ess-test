# ---- PostgreSQL（Docker 暴露在本机）----
POSTGRES_USER=admin
POSTGRES_PASSWORD=123456
POSTGRES_DB=energy
PG_PORT=5432          # 如果你改过对外端口，就填改后的，比如 5433
PG_HOST=localhost     # 本地脚本连宿主机

# ---- pgAdmin 配置 ----
PGADMIN_DEFAULT_EMAIL=admin@example.com
PGADMIN_DEFAULT_PASSWORD=admin123
PGADMIN_PORT=5050

# ---- EMQX（Docker 暴露在本机）----
MQTT_HOST=localhost
MQTT_PORT=1883
MQTT_USERNAME=
MQTT_PASSWORD=
MQTT_TOPIC=devices/+/realtime
MQTT_QOS=1
EMQX_MQTT_TCP_PORT=1883
EMQX_WS_PORT=8083
EMQX_DASHBOARD_PORT=18083

# ---- FastAPI（本地跑用的数据库URL）----
DATABASE_URL=postgresql+asyncpg://admin:123456@localhost:5432/energy
FRESH_SECS=60

# ---- ingestor 批量参数（可调）----
BATCH_SIZE=200
BATCH_FLUSH_MS=1000



